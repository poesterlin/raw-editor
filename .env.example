# Database
DATABASE_URL=postgres://raweditor:raweditor@db:5432/raweditor

# Directories (host paths are mounted into the container)
CLUT_DIR=./cluts
IMPORT_DIR=./import
EXPORT_DIR=./export
TMP_DIR=./tmp

# (Optional) Directory on a removable drive (like an SD card) to watch for new images.
SD_CARD_IMPORT_PATH=

# (Optional) Domain for Google OAuth callback.
HOST_DOMAIN=

# Docker build arg
RAWTHERAPEE_VERSION=

# --- Integrations ---

# Immich
IMMICH_BASE_URL=https://immich.example.com
IMMICH_API_KEY=your_api_key_here

# Google Photos
# To get these, create a project in Google Cloud Console with Photos Library API enabled.
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
